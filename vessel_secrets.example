# ========================================
# ARK NODE - SECRET VAULT TEMPLATE
# ========================================
# 
# Copy this file to 'vessel_secrets.env' and fill in your values
# 
# SETUP INSTRUCTIONS:
# 1. cp vessel_secrets.example vessel_secrets.env
# 2. Edit vessel_secrets.env with your actual credentials
# 3. NEVER commit vessel_secrets.env to Git (it's in .gitignore)
#
# ========================================

# ----------------------------------------
# NETWORK CONFIGURATION
# ----------------------------------------
ARK_NODE_IP=192.168.26.8              # Your static IP or 'localhost'
ARK_DOMAIN=your-domain.com             # Your domain (optional)

# ----------------------------------------
# GOLDEN CREDENTIALS (Default Admin)
# ----------------------------------------
ARK_ADMIN_USER=admin                   # Default admin username
ARK_ADMIN_PASSWORD=CHANGE_ME_NOW       # IMPORTANT: Change this!

# ----------------------------------------
# SERVICE-SPECIFIC CREDENTIALS
# ----------------------------------------
FILEBROWSER_ADMIN_TOKEN=CHANGE_ME      # FileBrowser admin token
CODE_SERVER_PASSWORD=CHANGE_ME         # Code-Server password
CODE_SERVER_SUDO_PASSWORD=CHANGE_ME    # Code-Server sudo password

# ----------------------------------------
# TAILSCALE VPN (Optional)
# ----------------------------------------
# Get from: https://login.tailscale.com/admin/settings/keys
TAILSCALE_AUTHKEY=tskey-auth-xxxxx

# ----------------------------------------
# CLOUDFLARE (Optional - for remote access)
# ----------------------------------------
# Get from: https://dash.cloudflare.com/
CLOUDFLARE_TUNNEL_TOKEN=
CLOUDFLARE_API_TOKEN=
CLOUDFLARE_ZONE_ID=

# ----------------------------------------
# SMTP/EMAIL (Optional - for notifications)
# ----------------------------------------
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=ark@your-domain.com

# ----------------------------------------
# BACKUP CREDENTIALS (Optional)
# ----------------------------------------
BACKUP_ENCRYPTION_KEY=
RESTIC_PASSWORD=

# ----------------------------------------
# API KEYS (Optional)
# ----------------------------------------
OPENAI_API_KEY=sk-xxxxx
ANTHROPIC_API_KEY=sk-ant-xxxxx

# ----------------------------------------
# CIFS/SMB MOUNT (Optional - Windows Host)
# ----------------------------------------
CIFS_USERNAME=your-windows-username
CIFS_PASSWORD=your-windows-password
CIFS_DOMAIN=WORKGROUP
CIFS_HOST_IP=192.168.26.1
CIFS_SHARE_NAME=DOCK
