# ========================================
# ARK v3.1.1 - Environment Variables Template
# ========================================
# Copy this file to '.env' and fill in your values
# NEVER commit .env to Git (it's in .gitignore)
#
# QUICK START:
#   cp .env.template .env
#   nano .env  # Edit your values
#   source .env  # Load variables
# ========================================

# ----------------------------------------
# ARK CORE CONFIGURATION
# ----------------------------------------
ARK_VERSION=3.1.1
ARK_NODE_IP=192.168.26.8
ARK_DOMAIN=localhost
ARK_ADMIN_USER=admin
ARK_ADMIN_PASSWORD=CHANGE_ME_NOW

# ----------------------------------------
# SENTRY TELEMETRY (Enterprise Instrumentation)
# ----------------------------------------
# Get your DSN from: https://sentry.io/settings/[org]/projects/[project]/keys/
# Format: https://[key]@[org].ingest.sentry.io/[project-id]
SENTRY_DSN=placeholder_put_your_dsn_here
SENTRY_ENVIRONMENT=production
SENTRY_RELEASE=ark-node@3.1.1

# ----------------------------------------
# LOGGING CONFIGURATION
# ----------------------------------------
LOG_LEVEL=INFO
LOG_FORMAT=structured
LOG_FILE=/opt/ark/logs/ark.log
LOG_ROTATION_SIZE=10MB
LOG_ROTATION_BACKUPS=5

# ----------------------------------------
# OLLAMA AI CONFIGURATION
# ----------------------------------------
OLLAMA_HOST=http://localhost:11434
MODEL_CHAT=granite4:3b
MODEL_CODER=qwen2.5-coder:3b
MODEL_VISION=qwen3-vl:2b
MODEL_EMBEDDING=nomic-embed-text

# ----------------------------------------
# VOICE WATCHER CONFIGURATION
# ----------------------------------------
INPUT_DIR=./data/input
OUTPUT_DIR=./data/output
PROCESSED_DIR=./data/input/processed

# ----------------------------------------
# SSH CONFIGURATION (for remote access)
# ----------------------------------------
ARK_SSH_HOST=100.124.104.38
ARK_SSH_USER=nomadty

# ----------------------------------------
# TAILSCALE VPN (Optional)
# ----------------------------------------
TAILSCALE_AUTHKEY=

# ----------------------------------------
# CLOUDFLARE (Optional - for remote access)
# ----------------------------------------
CLOUDFLARE_TUNNEL_TOKEN=
CLOUDFLARE_API_TOKEN=
CLOUDFLARE_ZONE_ID=

# ----------------------------------------
# SMTP/EMAIL (Optional - for notifications)
# ----------------------------------------
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=ark@your-domain.com

# ----------------------------------------
# TIMEZONE
# ----------------------------------------
TZ=America/Los_Angeles

# ----------------------------------------
# DATADOG INFRASTRUCTURE MONITORING (Optional)
# ----------------------------------------
# Get your API key from: https://app.datadoghq.com/organization-settings/api-keys
DD_API_KEY=placeholder_put_your_api_key_here
